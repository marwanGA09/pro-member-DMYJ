generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Sector {
  economy
  academy
  social
  dawah
  management
  other
}

enum Role {
  user
  admin
}

enum Sex {
  male 
  female
}



model User {
  id              Int           @id @default(autoincrement()) @unique
  username        String        @db.VarChar(80)                @unique
  first_name      String        @db.VarChar(80)
  middle_name     String        @db.VarChar(80)
  last_name       String        @db.VarChar(80)
  date_of_birth   DateTime?     @db.Date
  email           String        @unique @db.VarChar(100)
  sector          Sector        @default(economy)
  password        String        @db.VarChar(200)
  phone_number    String        @db.VarChar(20)        @unique
  role            Role          @default(user) 
  sex  Sex?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  members         Member[]
  payments       MonthlyPayment[]
}



// MEMBER 

model Member{
  id            Int       @id @default(autoincrement()) @unique
  full_name    String     @db.VarChar(150)
  sex           Sex
  book_number    String   @unique 
  profession    String?   @db.VarChar(80)
  address       String    @db.VarChar(250)
  phone         String    @db.VarChar(20)  @unique
  email         String?   @db.VarChar(100)  @unique 
  membership_amount Int   
  profile_image   String?
  signed_date     DateTime  @default(now())
  date_of_birth    DateTime?
  note           String?
  created_by      Int      
  user           User? @relation(fields: [created_by],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  payments       MonthlyPayment[]
}


enum PaymentMethod {
  cash
  bank_transfer
  other
}


model MonthlyPayment {
  id              Int            @id @default(autoincrement()) @unique
  uuid Int 
  month Int?
  year Int
  member_id       Int
  payment_method   PaymentMethod @default(cash)
  member          Member         @relation(fields: [member_id], references: [id])
  user_id      Int
  user          User           @relation(fields: [user_id], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([month,year,member_id])
}
